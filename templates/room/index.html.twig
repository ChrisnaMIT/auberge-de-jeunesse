{% extends 'base.html.twig' %}
{% block title %}Liste des chambres{% endblock %}

{% block body %}
    <section class="py-5" style="background: #f3f4f6;">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">Liste des chambres</h2>
                <a href="{{ path('app_room_create') }}" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm">
                    + Nouvelle chambre
                </a>
            </div>

            {% if rooms is empty %}
                <div class="text-center text-secondary py-5">
                    <p>Aucune chambre enregistrée pour le moment.</p>
                    <a href="{{ path('app_room_create') }}" class="btn btn-outline-primary mt-3 px-4">Créer la première</a>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for room in rooms %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-body">
                                    <h5 class="fw-bold mb-2">{{ room.name }}</h5>
                                    <p class="text-muted small mb-2">{{ room.type }}</p>
                                    <p class="mb-1"><strong>{{ room.pricePerNight }}€</strong> / nuit</p>
                                    <p class="text-muted mb-1">{{ room.numberOfBeds }} lit(s)</p>
                                    <p class="text-secondary small">{{ room.description|u.truncate(70, '…') }}</p>
                                    <span class="badge bg-{{ room.status == 'available' ? 'success' : (room.status == 'occupied' ? 'danger' : 'warning') }}">
                                    {{ room.status|capitalize }}
                                </span>
                                </div>
                                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                                    <a href="{{ path('app_room_show', {'id': room.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                    <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                                    <a href="{{ path('app_room_delete', {'id': room.id}) }}" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Supprimer cette chambre ?')">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>

    <style>
        body { background: #f3f4f6; font-family: "Inter", sans-serif; }
        .card { transition: 0.3s ease; }
        .card:hover { transform: translateY(-3px); box-shadow: 0 6px 15px rgba(0,0,0,0.1); }
    </style>
{% endblock %}

