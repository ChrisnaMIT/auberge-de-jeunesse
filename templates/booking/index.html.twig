{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
    <div class="container mx-auto max-w-4xl mt-10 bg-white shadow-md rounded-2xl p-6">
        <h1 class="text-2xl font-bold mb-6 text-center">Liste des réservations</h1>

        <div class="flex justify-end mb-4">
            <a href="{{ path('app_booking_create') }}" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                + Nouvelle réservation
            </a>
        </div>

        {% if bookings is empty %}
            <p class="text-center text-gray-500">Aucune réservation enregistrée.</p>
        {% else %}
            <div class="space-y-4">
                {% for booking in bookings %}
                    <div class="border border-gray-200 rounded-lg p-4 shadow-sm">
                        <h2 class="text-lg font-semibold">{{ booking.room.name }}</h2>

                        <p class="text-gray-600 text-sm">
                            {{ booking.checkIn|date('d/m/Y') }} → {{ booking.checkOut|date('d/m/Y') }}<br>
                            {{ booking.bedsBooked }} lit(s) réservé(s)
                        </p>
                        <p class="mt-2 font-medium">Total : {{ booking.totalPrice ?? '—' }} €</p>
                        <div class="mt-3 flex gap-3">
                            <a href="{{ path('app_booking_show', {'id': booking.id}) }}" class="text-blue-600 hover:underline">Voir</a>
                            <a href="{{ path('app_booking_edit', {'id': booking.id}) }}" class="text-yellow-600 hover:underline">Modifier</a>
                            <a href="{{ path('app_booking_delete', {'id': booking.id}) }}" class="text-red-600 hover:underline"
                               onclick="return confirm('Supprimer cette réservation ?')">Supprimer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

